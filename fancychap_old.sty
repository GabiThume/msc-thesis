\def\@makechapterhead#1{%
  \begingroup
  \vspace*{50\p@}%
  \sffamily\Huge
  \noindent\hrulefill
  \begin{tabular}{|c|}
        \rowcolor{black}\color{white} \large \scshape \@chapapp \\
        \vspace{-2ex}\\ %coloquei para aumentar o espaço entre o título e o número
        \Huge \slshape \scaletoheight{1cm}{\thechapter} \\ \hline
    \end{tabular}
  \\
  {\Huge\bfseries}
  \flushright
    #1
  \\
  \hfill\rule{.8\textwidth}{0.5pt}\\
    \vskip-32pt
  \hfill\rule{.8\textwidth}{2pt}\\
    \vskip 4.5ex
  \endgroup
}

